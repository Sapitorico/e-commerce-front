---
import { Icon } from 'astro-icon/components'

interface Props {
    label: string;
    placeholder: string;
    name: string;
}

const { label, placeholder, name } = Astro.props;
---

<div class="input-container">
    <label for={name}>{label}</label>
    <div class="input-wrapper">
        <span><Icon name='user'/></span>
        <input name={name} placeholder={placeholder} required />
    </div>
</div>

<style>
    .input-container{
        display: flex;
        flex-direction: column;
        gap: .8rem;
        width: 100%;
        
        label{
            color: var(--primary-text);
            font-size: 1.6rem;
            font-weight: 700;
            margin-left: 0.8rem;
        }
        span{
            display: flex;
            justify-content: center;
            align-items: center;
            width: 4.8rem;
            height: 100%;
            font-size: 2.4rem;
            color: var(--primary-text);
        }
        .input-wrapper:focus-within{
            border: 1px solid var(--borders);
        }
        .input-wrapper{
            position: relative;
            background-color: #ffffff;
            width: 100%;
            height: 4.8rem;
            border-radius: .8rem;
            border: 1.5px solid #ecedec;
            display: flex;
            align-items: center;
            overflow: hidden;
            
            input:focus {
                outline: none;
            }
            input{
                width: 100%;
                height: 100%;
                border: none;
                font-size: 1.4rem;
            }
        }
    }
</style>