---
import { Icon } from "astro-icon/components";
import Button from "./Button.astro";
---

<nav class="navbar">
  <div class="logo">
    <Icon name="logo" />
  </div>
  <ul class="nav-options">
    <li><a href="/">Inicio</a></li>
    <li><a href="#">Tienda</a></li>
    <li><a href="#">Ofertas</a></li>
  </ul>
  <div class="auth-buttons">
    <ul>
      <li>
        <Button color="secondary">Iniciar secci√≥n</Button>
      </li>
    </ul>
    <li>
      <Button><a class="register" href="/auth/register">Registrarse</a></Button>
    </li>
  </div>
</nav>

<style>
  .navbar {
    position: absolute;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    height: 6.4rem;
    background-color: var(--background);
    filter: drop-shadow(0px 0px 2px rgba(0, 0, 0, 0.25));
    .logo {
      display: flex;
      text-align: center;
      font-size: 5.6rem;
    }

    ul {
      display: flex;
      gap: 0.8rem;
    }

    .nav-options {
      display: flex;
      gap: 0.8rem;
      a {
        font-size: 2.5rem;
        color: var(--primary-text);
        font-weight: 700;
      }
    }

    .auth-buttons {
      a {
        font-size: 1.4rem;
        font-weight: 600;
      }
      a.login {
        color: var(--primary-text);
      }
      a.register {
        color: var(--secondary-background);
      }
    }
  }
</style>
